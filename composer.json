{
    "name": "aoe/varnish",
    "type": "typo3-cms-extension",
    "description": "Enable varnish support with tags",
    "homepage": "https://github.com/AOEpeople/TYPO3-varnish",
    "support": {
        "issues": "https://github.com/AOEpeople/TYPO3-varnish/issues"
    },
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "AOE GmbH",
            "email": "dev@aoe.com",
            "homepage": "https://www.aoe.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "guzzlehttp/guzzle": "^6.2",
        "typo3/cms-core": "7.6.0 || ^8.7"
    },
    "require-dev": {
        "typo3/cms": "^7.6 || ^8.7",
        "nimut/testing-framework": "2.0.*",
        "phpunit/phpcov": "3.1.*",
        "squizlabs/php_codesniffer": "3.3.*",
        "sebastian/phpcpd": "3.0.*",
        "phpmd/phpmd": "2.6.*"
    },
    "replace": {
        "varnish": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Aoe\\Varnish\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aoe\\Varnish\\Tests\\": "Tests"
        }
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/varnish ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/varnish"
        ],
        "test:unit": [
            "[ -e .Build/bin/phpunit ] || composer update",
            "TYPO3_PATH_ROOT=.Build/Web .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit/ --debug --verbose"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.0-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}